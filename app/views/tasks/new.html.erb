<h1>Add a new task</h1>
<%= form_with(model: @task, url: tasks_path) do |form| %>
  <div style="margin-bottom: 10px;">
    <p><%= form.label :title %></p>
    <%= form.text_field :title, class: "my-form-control" %>
  </div>
  <div style="margin-bottom: 10px;">
    <p><%= form.label :details %></p>
    <%= form.text_area :details, class: "my-form-control" %>
  </div>
  <div>
    <%= form.submit "Create Task", class: "my-submit-button" %>
  </div>
<% end %><br>
<p><%= link_to "<< Back to Tasks List", tasks_path %></p>
